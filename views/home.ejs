    <%- include('partials/navbar', { page: '/' }) %>



    <!-- Hero Section -->
    <section class="hero container mx-auto mt-10">
        <div class="text-center bg-gray-200 p-10 rounded-lg">
            <h1 class="text-4xl font-bold">Welcome to the Lego Collection</h1>
            <p class="mt-4 text-lg">Explore our wide range of Lego sets and themes.</p>
            <a href="/lego/sets" class="btn btn-primary mt-6">Browse Sets</a>
        </div>
    </section>

    <!-- Lego Set Grid -->
    <section class="container mx-auto mt-10 grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Card 1 -->
        <div class="card bg-white shadow-md rounded-lg p-6">
            <img src="https://cdn.rebrickable.com/media/sets/71002-4.jpg" alt="Lego Set 1" class="w-full h-64 object-cover rounded-lg">
            <h2 class="text-xl font-bold mt-4">Lego Set 1</h2>
            <p class="mt-2">A brief description of Lego Set 1. It's part of the Star Wars theme.</p>
