    <!-- <%- include('partials/navbar', { page: '' }) %> -->
    <%- include('partials/navbar', { page: '/lego/sets' }) %>



    <!-- Hero Section for 404 -->
    <section class="hero">
        <h1 class="text-3xl font-bold">Lego Collection</h1>
        <div class="filter-links">
            <a href="/lego/sets?theme=technic" class="btn">Technic</a>
            <a href="/lego/sets?theme=classic-town" class="btn">Classic Town</a>
            <a href="/lego/sets?theme=star-wars" class="btn">Star Wars</a>
          
        </div>
    </section>
    



   <table class="table-auto border-collapse w-full border">
    <thead class="bg-gray-200">
        <tr>
            <th class="p-2 border">Image</th>
            <th class="p-2 border">Name</th>
            <th class="p-2 border">Theme</th>
            <th class="p-2 border">Year</th>
            <th class="p-2 border">Parts</th>
            <th class="p-2 border">Details</th>
            <th class="p-2 border">Edit</th>
            <th class="p-2 border">Delete</th>
        </tr>
    </thead>
    <tbody>
        <% sets.forEach(set => { %>
            <tr class="text-center">
                <td class="p-2 border"><img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-16 h-16 object-cover" /></td>
                <td class="p-2 border"><%= set.name %></td>
                <td class="p-2 border">
                    <a href="/lego/sets?theme=<%= set.theme_id %>" class="text-blue-600 underline">
                        <%= set.theme_id %>
                    </a>
                </td>
                <td class="p-2 border"><%= set.year %></td>
                <td class="p-2 border"><%= set.num_parts %></td>
                <td class="p-2 border">
                    <a href="/lego/sets/<%= set.set_num %>" class="text-blue-600">Details</a>
                </td>
                <td class="p-2 border">
                    <a href="/lego/editSet/<%= set.set_num %>" class="text-green-600">Edit</a>
                </td>
                <td class="p-2 border">
                    <a href="/lego/deleteSet/<%= set.set_num %>" class="text-red-600">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

    
    
    
    
    
    
    
    



    <!-- Footer -->
    <footer class="bg-gray-800 text-white p-4 mt-10">
